<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#FFFFFF"/> <!-- White background -->

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD"/> <!-- Light gray border -->

    <!-- Corner radius -->
    <corners android:radius="12dp"/> <!-- Rounded corners -->

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
